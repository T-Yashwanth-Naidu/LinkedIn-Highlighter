
{
  "manifest_version": 3,
  "name": "LinkedIn Job Highlighter",
  "version": "3.3",
  "description": "Highlights Viewed and Applied job states on LinkedIn Jobs pages.",
  "permissions": ["scripting", "activeTab","storage"],
  "host_permissions": ["https://www.linkedin.com/jobs/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
    "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}